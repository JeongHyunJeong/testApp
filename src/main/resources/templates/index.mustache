{{>layout/header}}
<h1>스프링 부트로 시작하는 웹 서비스 v2</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글등록</a>
        </div>
        {{#userName}}
            Logged in as : <span id="user">{{userName}}</span>
            <a href="/logout" role="button" class="btn btn-primary">로그아웃</a>
        {{/userName}}
        {{^userName}}
            <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">google 로그인</a>
        {{/userName}}
    </div>
    <br>
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
            <tr>
                <th>no</th>
                <th>title</th>
                <th>author</th>
                <th>last update</th>
            </tr>
        </thead>
        <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td><a href="/posts/update/{{id}}">{{id}}</a></td>
                    <td>{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
        </tbody>
    </table>
</div>
{{>layout/footer}}